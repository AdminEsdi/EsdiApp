<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="10dp"
    android:paddingLeft="2dp"
    android:paddingRight="2dp"
    android:paddingTop="10dp">

    <!-- A CardView that contains another views -->
    <android.support.v7.widget.CardView
        android:id="@+id/card_view_ofertas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        card_view:cardElevation="10dp"
        card_view:cardCornerRadius="5dp"
        android:clickable="true"
        android:orientation="vertical"
        android:foreground="?android:attr/selectableItemBackground"
        >

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:id="@+id/iv_imatge_menjar"
                android:layout_width="137dp"
                android:layout_height="98dp"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:src="@drawable/cruz"
                tools:layout_conversion_absoluteX="7dp"
                tools:layout_conversion_absoluteY="15dp"
                tools:layout_conversion_absoluteWidth="346dp"
                tools:layout_conversion_absoluteHeight="346dp"
                card_view:layout_constraintTop_toTopOf="parent"
                android:layout_marginLeft="0dp"
                card_view:layout_constraintLeft_toLeftOf="parent" />

            <TextView
                android:id="@+id/tv_nommenjar"
                android:layout_width="106dp"
                android:layout_height="25dp"
                android:gravity="center"
                android:text="Pillow Talk"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@color/colorAccent"
                android:textSize="11sp"
                android:textStyle="bold"
                tools:layout_conversion_absoluteHeight="21dp"
                tools:layout_conversion_absoluteWidth="346dp"
                tools:layout_conversion_absoluteX="7dp"
                tools:layout_conversion_absoluteY="15dp"
                android:layout_marginTop="0dp"
                card_view:layout_constraintTop_toBottomOf="@+id/iv_imatge_menjar"
                android:layout_marginLeft="0dp"
                card_view:layout_constraintLeft_toLeftOf="@+id/iv_imatge_menjar"
                card_view:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="0dp" />

            <TextView
                android:id="@+id/tv_preu"
                android:layout_width="32dp"
                android:layout_height="25dp"
                android:text="Zayn"

                android:textAlignment="textStart"
                android:textSize="18sp"
                tools:layout_conversion_absoluteX="7dp"
                tools:layout_conversion_absoluteY="15dp"
                tools:layout_conversion_absoluteWidth="346dp"
                tools:layout_conversion_absoluteHeight="21dp"
                card_view:layout_constraintLeft_toRightOf="@+id/tv_nommenjar"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="0dp"
                card_view:layout_constraintTop_toBottomOf="@+id/iv_imatge_menjar"
                tools:layout_editor_absoluteX="105dp" />
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>